<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rlTextInfo_VI"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle_VI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/main_title"
            android:textColor="@color/title_color" />
        <TextView
            android:id="@+id/tvRegion_VI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/medium_title" />
        <TextView
            android:id="@+id/tvCity_VI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/medium_title" />
        <TextView
            android:id="@+id/tvPhone_VI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/small_title_right"/>
        <TextView
            android:id="@+id/tvAddress_VI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/small_title_right" />
        <TextView
            android:id="@+id/tvLink_VI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/small_title_right" />

</LinearLayout>