<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="main_title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="medium_title">
        <item name="android:textSize">21sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="small_title">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>

    </style>

    <style name="small_title_right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_action" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="button_share" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_compat_margin</item>
        <item name="android:src">@drawable/ic_menu</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>

    </style>
    <dimen name="fab_compat_margin">16dp</dimen>
</resources>
