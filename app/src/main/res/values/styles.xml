<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="main_title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="medium_title">
        <item name="android:textSize">21sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="small_title">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>

    </style>

    <style name="small_title_right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_action" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="button_share" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="FabStyle">
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd"
              tools:targetApi="jelly_bean_mr1">true</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/dark_primary</item>
    </style>

    <style name="card_rounded">
        <item name="android:layout_margin">4dp</item>
    </style>

    <dimen name="fab_compat_margin">16dp</dimen>
</resources>
